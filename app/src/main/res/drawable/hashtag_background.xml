<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected 상태 -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#6200EE" /> <!-- 보라색 배경 -->
            <corners android:radius="16dp" /> <!-- 둥근 모서리 -->
            <stroke android:width="2dp" android:color="#6200EE" /> <!-- 보라색 테두리 -->
        </shape>
    </item>

    <!-- Default 상태 -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- 투명한 배경 -->
            <corners android:radius="16dp" /> <!-- 둥근 모서리 -->
            <stroke android:width="2dp" android:color="#6200EE" /> <!-- 보라색 테두리 -->
        </shape>
    </item>
</selector>