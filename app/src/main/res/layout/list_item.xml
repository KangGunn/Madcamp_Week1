<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- 이미지 -->
    <FrameLayout
        android:id="@+id/item_image_background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_square">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:layout_gravity="center" />

    </FrameLayout>

    <!-- 텍스트 컨테이너 -->
    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 텍스트1 -->
        <TextView
            android:id="@+id/item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 1"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pretendardstd_regular" />

        <!-- 텍스트2 -->
        <TextView
            android:id="@+id/item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 2"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/pretendardstd_regular" />

    </LinearLayout>

    <!-- 버튼 컨테이너 -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <!-- 버튼1 -->
        <FrameLayout
            android:id="@+id/button1_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/list_item_button">

            <ImageView
                android:id="@+id/button1_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/list_button1" />

        </FrameLayout>

        <!-- 버튼2 -->
        <FrameLayout
            android:id="@+id/button2_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/list_item_button">

            <ImageView
                android:id="@+id/button2_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/list_button2" />

        </FrameLayout>

        <!-- 버튼3 -->
        <FrameLayout
            android:id="@+id/button3_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/list_item_button">

            <ImageView
                android:id="@+id/button3_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/list_button3" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
